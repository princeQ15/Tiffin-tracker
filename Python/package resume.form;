package resume.form;
import java.awt.*;
import javax.swing.*;
import java.awt.GridLayout;

public class ResumeForm {

    JFrame jframe;
    JLabel lname,lcontact,lemail,laddress;
    JTextField tname,tcontact,temail;
    JTextArea tAddress;
    JRadioButton male;
    JRadioButton female;
    ButtonGroup Gender;
    Jbutton Submit, Reset;
    
    ResumeForm() {
        jframe = new JFrame("Resume Form");
        lname = new JLabel("Enter your name");
        lcontact = new JLAbel("Enter contact Number");
        lemail = new JLabel ("Enter vaild Email id");
        laddress = new JLabel ("Enter your Address");

        tname = new JtextField();
        tcontact = new JTextField();
        temail = new JTextField();
        tAddress = new JTextField();

        male = new JRadioButton("Male")
        female = new JRadioButton("Female")
        Gender = new ButtonGroup();
    
        Submit = new JButton("Submit");
        Reset = new JButton("Reset");

        Gender.add(male);
        Gender.add(female);

        jframe.add(lname);
        jframe.add(tname);
        jframe.add(lcontact);
        jframe.add(tcontact);
        jframe.add(lemail);
        jframe.add(temail);
        jframe.add(laddress);
        jframe.add(tAddress);
        jframe.add(male);
        jframe.add(female);
        jframe.add(Submit);
        jframe.add(Reset);

        jframe .setSize(300, 500);
        jframe.setLayout(new GridLayout(6,1));
        jframe.setVisible(true);
        jframe.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

       public static void main(String[] args) {
           new ResumeForm();
       } 
    }
}